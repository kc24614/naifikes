<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title>StreamVault Ultra</title>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        body { background-color: #000; color: white; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; -webkit-tap-highlight-color: transparent; overflow-x: hidden; }
        .aspect-netflix { aspect-ratio: 16 / 9; }
        
        /* --- 沉浸式 Hero 區域 --- */
        #hero { position: relative; height: 75vh; width: 100%; overflow: hidden; display: flex; flex-direction: column; justify-content: flex-end; }
        
        #heroBlurBg {
            position: absolute; inset: 0;
            background-size: cover; background-position: right center;
            filter: blur(45px) brightness(0.5);
            transform: scale(1.3); z-index: 1; will-change: transform;
        }
        
        #heroCoverWrapper {
            position: relative; z-index: 5; width: 100%; padding: 0 25px; margin-bottom: 20px;
            filter: drop-shadow(0 15px 35px rgba(0,0,0,0.9));
            transition: transform 0.1s ease-out, opacity 0.2s ease-out;
            will-change: transform, opacity;
        }
        #heroMainImg { width: 100%; border-radius: 12px; object-fit: contain; border: 1px solid rgba(255,255,255,0.1); }

        .hero-vignette {
            position: absolute; inset: 0; z-index: 3;
            background: linear-gradient(0deg, #000 15%, rgba(0,0,0,0) 65%);
        }

        /* --- UI 其他組件 --- */
        .row-container { display: flex; overflow-x: auto; gap: 14px; padding: 0 15px; scrollbar-width: none; }
        .row-container::-webkit-scrollbar { display: none; }
        .bottom-nav { background: rgba(15, 15, 15, 0.9); backdrop-filter: blur(25px); border-top: 1px solid #222; padding-bottom: env(safe-area-inset-bottom); }

        #detailView {
            position: fixed; inset: 0; z-index: 200; display: none; background: #000; overflow-y: auto;
            transition: transform 0.45s cubic-bezier(0.19, 1, 0.22, 1); will-change: transform;
        }

        .filter-chip {
            padding: 7px 16px; border-radius: 6px; border: 1px solid #333; font-size: 13px; font-weight: bold;
            transition: all 0.2s ease; cursor: pointer; background: #1a1a1a; color: #888; margin: 3px;
        }
        .filter-chip.active { background: white; color: black; border-color: white; transform: scale(1.08); }

        #lightbox { display: none; position: fixed; inset: 0; background: #000; z-index: 1000; align-items: center; justify-content: center; }
        #lightbox.active { display: flex; }
        .tap-zone { position: absolute; top: 0; bottom: 0; z-index: 1010; }
        .zone-prev { left: 0; width: 25%; } .zone-close { left: 25%; width: 50%; } .zone-next { left: 75%; width: 25%; }

        .view-container { display: none; min-height: 100vh; }
        .view-container.active { display: block; }
    </style>
</head>
<body class="pb-24">

    <div id="homePage" class="view-container active">
        <div id="hero">
            <div id="heroBlurBg"></div>
            <div class="hero-vignette"></div>
            <div id="heroCoverWrapper"><img id="heroMainImg" src="" alt="Cover"></div>
            <div class="relative z-10 px-8 pb-12 text-center">
                <p id="heroActor" class="text-white text-[10px] font-black mb-2 opacity-60 tracking-[0.2em] uppercase"></p>
                <h1 id="heroTitle" class="text-4xl font-black mb-8 italic tracking-tighter drop-shadow-2xl"></h1>
                <div class="flex gap-4 justify-center">
                    <button id="heroPlayBtn" class="bg-white text-black px-12 py-3 rounded-md font-bold flex items-center gap-2 shadow-xl active:scale-90 transition-transform"><i class="fa-solid fa-play"></i> 播放</button>
                    <button id="heroInfoBtn" class="bg-zinc-500/30 text-white px-10 py-3 rounded-md font-bold flex items-center gap-2 backdrop-blur-lg border border-white/10 active:scale-90 transition-transform"><i class="fa-solid fa-circle-info"></i> 詳情</button>
                </div>
            </div>
        </div>
        <main id="mainRows" class="relative z-10 -mt-10 space-y-12 pb-16"></main>
    </div>

    <div id="filterPage" class="view-container bg-black pt-24 px-4">
        <h2 class="text-3xl font-black italic mb-6 px-2 tracking-tighter text-zinc-200">全部分類</h2>
        <div class="bg-zinc-900/30 p-4 rounded-xl border border-zinc-800 mb-8 space-y-5 backdrop-blur-sm">
            <div id="catFilters" class="flex flex-wrap"></div>
            <div id="actorFilters" class="flex flex-wrap"></div>
        </div>
        <div id="filterResults" class="grid grid-cols-2 gap-4 pb-24 px-2"></div>
    </div>

    <div id="userPage" class="view-container bg-black pt-24 px-8">
        <div class="w-24 h-24 bg-gradient-to-br from-zinc-700 to-zinc-900 rounded-3xl mx-auto mb-8 flex items-center justify-center text-4xl font-bold shadow-2xl border border-zinc-800 text-zinc-400">DB</div>
        <h2 class="text-2xl font-bold mb-12 text-center tracking-tight">媒體管理</h2>
        <div class="space-y-6">
            <div class="bg-zinc-900/60 rounded-3xl p-8 border border-zinc-800 text-center backdrop-blur-md">
                <i class="fa-solid fa-plus-circle text-4xl text-blue-500 mb-4"></i>
                <p class="text-sm font-bold text-zinc-300 mb-6">新增影音資料</p>
                <button onclick="document.getElementById('folderInput').click()" class="bg-white text-black text-xs font-black px-10 py-4 rounded-full w-full active:scale-95 transition-all shadow-lg">選擇資料夾</button>
            </div>
            <div class="bg-zinc-900/40 rounded-3xl p-6 border border-zinc-800 grid grid-cols-2 divide-x divide-zinc-800 text-center">
                <div><div class="text-zinc-500 text-[10px] font-bold mb-1 uppercase">收藏部數</div><div id="statTotal" class="text-3xl font-black italic">0</div></div>
                <div><div class="text-zinc-500 text-[10px] font-bold mb-1 uppercase">劇照快取</div><div id="statImages" class="text-3xl font-black italic">0</div></div>
            </div>
            <button onclick="handleClearDatabase()" class="w-full text-red-600 font-bold py-5 bg-red-500/10 rounded-2xl border border-red-900/30 active:bg-red-500/20 transition-all">清空所有資料庫內容</button>
        </div>
    </div>

    <div id="detailView">
        <div class="w-12 h-1 bg-zinc-700 rounded-full absolute top-3 left-1/2 -translate-x-1/2 z-50 opacity-40"></div>
        <div class="relative aspect-netflix w-full">
            <div id="detailBanner" class="w-full h-full bg-cover bg-center"></div>
            <button onclick="closeDetail()" class="absolute top-8 right-4 bg-black/50 w-11 h-11 rounded-full flex items-center justify-center backdrop-blur-xl border border-white/10">✕</button>
        </div>
        
        <div class="p-6 space-y-4">
            <div>
                <h2 id="detailTitle" class="text-4xl font-black tracking-tighter mb-1 leading-tight"></h2>
                <div class="flex items-center gap-3 text-[13px] font-bold">
                    <span id="detailCategoryLabel" class="text-green-500 font-black tracking-widest uppercase"></span>
                    <span class="text-zinc-400">2026</span>
                    <span class="bg-zinc-800 text-zinc-300 px-1.5 py-0.5 rounded text-[10px] border border-zinc-700 font-black tracking-tighter">Ultra HD</span>
                </div>
            </div>

            <button id="detailPlayBtn" class="w-full bg-white text-black py-3 rounded-md font-black flex items-center justify-center gap-2 shadow-xl active:scale-95 transition-all">
                <i class="fa-solid fa-play text-sm"></i> 播放
            </button>

            <div>
                <p id="detailActorLabel" class="text-[13px] text-zinc-500">演員：<span class="text-zinc-100 font-medium ml-1"></span></p>
            </div>

            <div id="episodeGrid" class="space-y-4 pt-4 border-t border-zinc-900 mt-2"></div>
        </div>
    </div>

    <div id="lightbox">
        <div class="tap-zone zone-prev" onclick="changePhoto(-1)"></div>
        <div class="tap-zone zone-close" onclick="closeLightbox()"></div>
        <div class="tap-zone zone-next" onclick="changePhoto(1)"></div>
        <img id="lightboxImg" src="" class="max-w-full max-h-full object-contain">
        <div id="storyCounter" class="absolute bottom-12 text-zinc-600 text-[10px] font-black tracking-[0.4em] uppercase"></div>
    </div>

    <input type="file" id="folderInput" webkitdirectory directory multiple class="hidden" onchange="handleUpload(this.files)">

    <nav class="bottom-nav fixed bottom-0 w-full flex justify-around py-5 z-[160]">
        <div onclick="switchPage('home')" class="flex flex-col items-center gap-1.5 text-[10px] nav-item text-white font-bold" id="navHome"><i class="fa-solid fa-house text-xl"></i><span>首頁</span></div>
        <div onclick="switchPage('filter')" class="flex flex-col items-center gap-1.5 text-[10px] nav-item text-gray-500 font-bold" id="navFilter"><i class="fa-solid fa-filter text-xl"></i><span>分類</span></div>
        <div onclick="switchPage('user')" class="flex flex-col items-center gap-1.5 text-[10px] nav-item text-gray-500 font-bold" id="navUser"><i class="fa-solid fa-database text-xl"></i><span>管理</span></div>
    </nav>

    <script>
        let albums = {}, db, currentAlbum = null, currentPhotoIndex = 0;
        const STORE_NAME = "albums";
        const DB_NAME = "StreamVaultDB";

        function initDB() {
            const req = indexedDB.open(DB_NAME, 1);
            req.onupgradeneeded = e => e.target.result.createObjectStore(STORE_NAME, {keyPath:"id"});
            req.onsuccess = e => { db = e.target.result; loadFromDB(); };
        }
        initDB();

        async function loadFromDB() {
            const tx = db.transaction(STORE_NAME, "readonly");
            const res = await new Promise(r => tx.objectStore(STORE_NAME).get("main_data").onsuccess = e => r(e.target.result));
            if (res) { albums = res.content; renderHome(); setupFilters(); updateStats(); }
        }

        function handleClearDatabase() {
            if(confirm("⚠️ 確定要永久清空資料庫嗎？")) {
                if (db) db.close(); 
                const dReq = indexedDB.deleteDatabase(DB_NAME);
                dReq.onsuccess = () => { alert("資料庫已清空"); location.reload(); };
            }
        }

        async function handleUpload(files) {
            const temp = {};
            for (let f of files) {
                if (!f.type.startsWith('image/')) continue;
                const p = f.webkitRelativePath.split('/');
                if (p.length < 4) continue;
                const cat=p[p.length-4], act=p[p.length-3], ser=p[p.length-2], name=p[p.length-1];
                if (!temp[ser]) temp[ser] = { category:cat, actor:act, serial:ser, cover:null, contents:[] };
                const dataUrl = await new Promise(r => { const reader = new FileReader(); reader.onload = e => r(e.target.result); reader.readAsDataURL(f); });
                if (name.includes('封面')) temp[ser].cover = {url: dataUrl}; else temp[ser].contents.push({url: dataUrl});
            }
            albums = temp;
            db.transaction(STORE_NAME, "readwrite").objectStore(STORE_NAME).put({id:"main_data", content:albums});
            renderHome(); setupFilters(); updateStats(); switchPage('home');
        }

        window.addEventListener('scroll', () => {
            if (!document.getElementById('homePage').classList.contains('active')) return;
            const y = window.scrollY;
            const cover = document.getElementById('heroCoverWrapper');
            const blur = document.getElementById('heroBlurBg');
            if (y < 0) {
                const s = 1 + (Math.abs(y) / 550);
                cover.style.transform = `scale(${s})`;
                blur.style.transform = `scale(${1.3 + Math.abs(y)/800})`;
            } else {
                const s = Math.max(0.75, 1 - (y / 1200));
                const op = Math.max(0, 1 - (y / 500));
                cover.style.transform = `scale(${s}) translateY(${y * -0.1}px)`;
                cover.style.opacity = op;
                blur.style.transform = `translateY(${y * 0.45}px) scale(1.3)`;
            }
        });

        function renderHome() {
            const main = document.getElementById('mainRows'); main.innerHTML = '';
            const groups = {}; Object.values(albums).forEach(a => { if(!groups[a.category]) groups[a.category]=[]; groups[a.category].push(a); });
            const keys = Object.keys(albums);
            if(keys.length > 0) {
                const a = albums[keys[Math.floor(Math.random()*keys.length)]];
                document.getElementById('heroBlurBg').style.backgroundImage = `url(${a.cover?.url})`;
                document.getElementById('heroMainImg').src = a.cover?.url;
                document.getElementById('heroTitle').innerText = a.serial;
                document.getElementById('heroActor').innerText = a.actor;
                document.getElementById('heroPlayBtn').onclick = () => playMedia(a.serial);
                document.getElementById('heroInfoBtn').onclick = () => openDetail(a.serial);
            }
            for (let cat in groups) {
                const sec = document.createElement('section');
                sec.innerHTML = `<h2 class="px-6 text-xs font-black text-zinc-500 mb-4 uppercase tracking-[0.2em]">${cat}</h2><div class="row-container">${groups[cat].map(a => `<div class="flex-shrink-0 w-44 aspect-netflix rounded-lg overflow-hidden bg-zinc-900 shadow-2xl active:scale-95 transition-transform" onclick="openDetail('${a.serial}')"><img src="${a.cover?.url}" class="w-full h-full object-cover"></div>`).join('')}</div>`;
                main.appendChild(sec);
            }
        }

        function playMedia(s) { currentAlbum=albums[s]; if(currentAlbum && currentAlbum.contents.length>0) openLightbox(0); }
        function openDetail(s) {
            currentAlbum=albums[s];
            document.getElementById('detailBanner').style.backgroundImage=`url(${currentAlbum.cover?.url})`;
            document.getElementById('detailTitle').innerText=currentAlbum.serial;
            document.getElementById('detailCategoryLabel').innerText = currentAlbum.category;
            document.getElementById('detailActorLabel').querySelector('span').innerText=currentAlbum.actor;
            document.getElementById('detailPlayBtn').onclick=()=>playMedia(s);
            document.getElementById('episodeGrid').innerHTML = currentAlbum.contents.map((img, i) => `
                <div class="flex gap-5 items-center active:opacity-60 transition-opacity" onclick="openLightbox(${i})">
                    <div class="w-36 aspect-netflix rounded-xl overflow-hidden bg-zinc-900 flex-shrink-0 shadow-lg">
                        <img src="${img.url}" class="w-full h-full object-cover">
                    </div>
                    <div class="text-[14px] font-black tracking-tight">劇照展示 ${i+1}</div>
                </div>`).join('');
            const d = document.getElementById('detailView'); d.style.display='block'; setTimeout(()=>{d.style.transform='translateY(0)';},10); document.body.style.overflow='hidden';
        }
        function closeDetail() { const d=document.getElementById('detailView'); d.style.transform='translateY(100%)'; setTimeout(()=>{d.style.display='none'; document.body.style.overflow='auto';},450); }

        let startY = 0; const dView = document.getElementById('detailView');
        dView.addEventListener('touchstart', e => { if(dView.scrollTop <= 0) { startY = e.touches[0].pageY; dView.style.transition = 'none'; } });
        dView.addEventListener('touchmove', e => { const diff = e.touches[0].pageY - startY; if(dView.scrollTop <= 0 && diff > 0) { e.preventDefault(); dView.style.transform = `translateY(${diff}px)`; } });
        dView.addEventListener('touchend', e => { const diff = e.changedTouches[0].pageY - startY; dView.style.transition = 'transform 0.4s cubic-bezier(0.19, 1, 0.22, 1)'; if(diff > 160) closeDetail(); else dView.style.transform = 'translateY(0)'; });

        function openLightbox(i) { currentPhotoIndex=i; document.getElementById('lightboxImg').src=currentAlbum.contents[i].url; document.getElementById('lightbox').classList.add('active'); document.getElementById('storyCounter').innerText = `${i+1} / ${currentAlbum.contents.length}`; }
        function closeLightbox() { document.getElementById('lightbox').classList.remove('active'); }
        function changePhoto(d) { currentPhotoIndex=(currentPhotoIndex+d+currentAlbum.contents.length)%currentAlbum.contents.length; document.getElementById('lightboxImg').src=currentAlbum.contents[currentPhotoIndex].url; document.getElementById('storyCounter').innerText = `${currentPhotoIndex+1} / ${currentAlbum.contents.length}`; }
        function switchPage(p) { document.querySelectorAll('.view-container').forEach(v=>v.classList.remove('active')); document.querySelectorAll('.nav-item').forEach(i=>i.classList.replace('text-white','text-gray-500')); document.getElementById(p+'Page').classList.add('active'); document.getElementById('nav'+p.charAt(0).toUpperCase()+p.slice(1)).classList.replace('text-gray-500','text-white'); window.scrollTo(0,0); }
        function setupFilters() { 
            const cats=[...new Set(Object.values(albums).map(a=>a.category))], acts=[...new Set(Object.values(albums).map(a=>a.actor))];
            document.getElementById('catFilters').innerHTML=cats.map(c=>`<div class="filter-chip" onclick="selectChip('cat','${c}',this)">${c}</div>`).join('');
            document.getElementById('actorFilters').innerHTML=acts.map(a=>`<div class="filter-chip" onclick="selectChip('actor','${a}',this)">${a}</div>`).join('');
            applyFilter();
        }
        function selectChip(t,v,el){ if(t==='cat'){if(selectedCat===v){selectedCat=null;el.classList.remove('active');}else{document.querySelectorAll('#catFilters .filter-chip').forEach(c=>c.classList.remove('active'));selectedCat=v;el.classList.add('active');}} else {if(selectedActor===v){selectedActor=null;el.classList.remove('active');}else{document.querySelectorAll('#actorFilters .filter-chip').forEach(c=>c.classList.remove('active'));selectedActor=v;el.classList.add('active');}} applyFilter(); }
        let selectedCat=null, selectedActor=null;
        function applyFilter(){ const res=Object.values(albums).filter(a=>(selectedCat?a.category===selectedCat:true)&&(selectedActor?a.actor===selectedActor:true)); document.getElementById('filterResults').innerHTML=res.map(a=>`<div class="aspect-netflix rounded-xl overflow-hidden bg-zinc-900 shadow-xl" onclick="openDetail('${a.serial}')"><img src="${a.cover?.url}" class="w-full h-full object-cover"></div>`).join(''); }
        function updateStats(){ const k=Object.keys(albums); document.getElementById('statTotal').innerText=k.length; let c=0; k.forEach(x=>c+=albums[x].contents.length); document.getElementById('statImages').innerText=c; }
    </script>
</body>
</html>
